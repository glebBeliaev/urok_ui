            android:layout_weight="1"
            android:layout_marginEnd="6dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@android:color/black">

            <!-- Градиент и изображение внутри CardView -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Изображение в качестве фона -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/cover_picard"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"/>

                <!-- Градиент поверх изображения -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_overlay"/>

                <!-- Контейнер для текстов с отступами -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="8dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="20dp">

                    <!-- Рейтинг фильма -->
                    <!-- Рейтинг фильма -->
                    <TextView
                        android:id="@+id/movieRating1"
                        style="@style/body_s"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:text="16+"
                        android:textColor="@color/white" />

                    <!-- Жанр фильма -->
                    <TextView
                        android:id="@+id/movieGenre1"
                        style="@style/body_s"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/movieTitle1"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="4dp"
                        android:text="Action, Adventure, Drama"
                        android:textColor="@color/white_50" />

                    <!-- Название фильма -->
                    <TextView
                        android:id="@+id/movieTitle1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Star Trek: Picard"
                        style="@style/body_m"
                        android:textColor="@color/white"
                        android:layout_alignParentBottom="true"
                        />
                </RelativeLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

